<h1>Hero Squad</h1>

#if ($hero)
  <p>Current hero:</p>
  <p>$task.getName()</p>
#else
  <p>No hero!</p>
#end

<p>Add a new Hero:</p>

<form action="/heros" method="post">
  <label for="name">Hero Name</label>
  <input id="name" name="name" type="text">

  <button type="submit" class="btn btn-default">Add Hero</button>
</form>
